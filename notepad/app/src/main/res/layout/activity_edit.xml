<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity">

    <RelativeLayout
        android:paddingTop="20dp"
        android:id="@+id/edit_top"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edit_iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/iv_back"
            tools:ignore="InvalidId"></ImageView>

        <EditText
            android:id="@+id/edit_et_title"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/edit_iv_back"
            android:text="标题"
            android:textSize="26dp"></EditText>

        <ImageView
            android:id="@+id/edit_iv_true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/iv_true"></ImageView>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_top">

        <com.example.notepad.LineEditText
            android:id="@+id/Edit_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#00000000"
            android:fadingEdge="vertical"
            android:gravity="top"
            android:hint="请输入内容"
            android:inputType="textMultiLine"
            android:lineSpacingExtra="10dp"
            android:scrollbars="vertical"
            android:textSize="20sp" />
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/main_bottom_text"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_bottom_iv_text"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="11dp"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:src="@mipmap/iv_text"></ImageView>

            <TextView
                android:id="@+id/main_bottom_tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_bottom_iv_text"
                android:layout_centerHorizontal="true"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:text="文字"
                android:textSize="25dp"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_bottom_music"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_bottom_iv_music"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="9dp"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:src="@mipmap/iv_music"></ImageView>

            <TextView
                android:id="@+id/main_bottom_tv_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_bottom_iv_music"
                android:layout_centerHorizontal="true"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:text="录音"
                android:textSize="25dp"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_bottom_video"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_bottom_iv_video"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="7dp"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:src="@mipmap/iv_video"></ImageView>

            <TextView
                android:id="@+id/main_bottom_tv_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_bottom_iv_video"
                android:layout_centerHorizontal="true"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:text="视频"
                android:textSize="25dp"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_bottom_cemera"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_bottom_iv_cemera"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="9dp"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:src="@mipmap/iv_cemera"></ImageView>

            <TextView
                android:id="@+id/main_bottom_tv_cemera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_bottom_iv_cemera"
                android:layout_centerHorizontal="true"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:text="照相"
                android:textSize="25dp"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_bottom_write"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_bottom_iv_write"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:src="@mipmap/iv_write"></ImageView>

            <TextView
                android:id="@+id/main_bottom_tv_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_bottom_iv_write"
                android:layout_centerHorizontal="true"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:text="手写"
                android:textSize="25dp"></TextView>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>